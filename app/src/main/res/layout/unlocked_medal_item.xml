<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edge"
    android:layout_marginBottom="@dimen/_4sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMedals"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintDimensionRatio="3.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:contentDescription="@string/content_desc"
            android:id="@+id/ivMedal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvMedalName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        tools:text="Medal ABCDDCAd"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@+id/cvMedals"
        app:layout_constraintTop_toTopOf="@id/cvMedals" />

    <TextView
        android:id="@+id/tvMedalDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:textColor="@color/black"
        android:ellipsize="end"
        tools:text="Youve unlodkedunlodkedunlodkedunlodkedunlodkedunlodkedunlodked ansdas dadas dansss ssssxxxxxxxxxxxxxxxxxxsss sss sssss ssssdasdadasdansdasdadasdansdasdadasdansdasdadasdansdasdadasdansdas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvMedalName"
        app:layout_constraintTop_toBottomOf="@+id/tvMedalName"
        android:layout_marginEnd="@dimen/_5sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout
